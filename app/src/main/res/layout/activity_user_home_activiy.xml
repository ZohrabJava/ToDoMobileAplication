<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".UserHomeActivity">


    <TextView
        android:id="@+id/homeText"
        android:layout_width="76dp"
        android:layout_height="22dp"
        android:layout_marginTop="56dp"
        android:text="Home"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#6B4730"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogout"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#EBC07D"
        android:text="logout"
        app:layout_constraintBottom_toTopOf="@+id/userText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNew"
        android:layout_width="159dp"
        android:layout_height="130dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="#00000000"
        android:foreground="@drawable/newtask"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@null" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonInProgres"
        android:layout_width="159dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:foreground="@drawable/progres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonNew"
        app:layout_constraintTop_toBottomOf="@+id/InProgressText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonInReview"
        android:layout_width="159dp"
        android:layout_height="130dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FFFFFF"
        android:foreground="@drawable/reviw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNew" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDone"
        android:layout_width="159dp"
        android:layout_height="130dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FFFFFF"
        android:foreground="@drawable/done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toEndOf="@+id/buttonInReview"
        app:layout_constraintTop_toBottomOf="@+id/buttonInProgres" />

    <TextView
        android:id="@+id/newTaskText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:text="New Tasks"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#6B4730"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeText" />

    <TextView
        android:id="@+id/InProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:text="Tasks In Progress"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#6B4730"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toEndOf="@+id/newTaskText"
        app:layout_constraintTop_toBottomOf="@+id/userText" />

    <TextView
        android:id="@+id/reviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
        android:text="Tasks In Review"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#6B4730"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNew" />

    <TextView
        android:id="@+id/doneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tasks Done"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#6B4730"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toEndOf="@+id/reviewText"
        app:layout_constraintTop_toBottomOf="@+id/buttonInProgres" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRejected"
        android:layout_width="121dp"
        android:layout_height="124dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:foreground="@drawable/reject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rejectedText" />

    <TextView
        android:id="@+id/userText"
        android:layout_width="244dp"
        android:layout_height="29dp"
        android:layout_marginTop="56dp"
        android:text="Zohrab Hovhannisyan"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#6B4730"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rejectedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Rejected Tasks"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#6B4730"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonInReview" />

</androidx.constraintlayout.widget.ConstraintLayout>